<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CSV name:"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:textStyle="italic">

        </TextView>

        <EditText
            android:id="@+id/csv_name_et"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:hint="without file extension"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:textAlignment="center"
            android:textStyle="italic">

        </EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Steps made:"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:textStyle="italic">

        </TextView>

        <EditText
            android:id="@+id/step_made_et"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:inputType="number"
            android:textAlignment="center"
            android:textStyle="italic">

        </EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mode:"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:textStyle="italic">

        </TextView>

        <Spinner
            android:id="@+id/mode_spinner"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:entries="@array/mode_spinner_values"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:spinnerMode="dialog"
            android:textStyle="italic">

        </Spinner>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:textAllCaps="false"
            android:layout_marginRight="20dp"
            android:textStyle="italic">
        </Button>

        <Button
            android:id="@+id/cancel_save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textStyle="italic">
        </Button>

    </LinearLayout>

</LinearLayout>